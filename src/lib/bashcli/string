#!/usr/bin/env bash

bashcli-string-trim() {
  local -n __string

  for __string; do
    __string=${__string##+([$' \t\r\n'])}
    __string=${__string%%+([$' \t\r\n'])}
  done
}

bashcli-string-quote() {
  local -n __string

  for __string; do
    if [[ ${__string} != *([a-zA-Z0-9,._+:@%/-]) ]]; then
      __string=${__string@Q}
    fi
  done
}

bashcli-string-split() {
  local -n __array=${3:-REPLY}
  local IFS=

  __array=()
  readarray -d "$2" -t __array < <(printf "%s" "$1") || true
}

bashcli-string-join() {
  local __separator=$1
  local -n __array=$2
  local IFS=${__separator}

  REPLY="${__array[*]}"
}

#!/usr/bin/env bash

declare parameters=()
declare -a scopes=()
declare -gA BASHCLI_CONFIG_CLI_COMMON_OPTIONS=()
declare IFS

bashcli-options-parse BASHCLI_CONFIG_CLI_COMMON_OPTIONS parameters scopes=scope -- "$@"
IFS=,
# shellcheck disable=SC2034
BASHCLI_CONFIG_CLI_COMMON_OPTIONS[scopes]="${scopes[*]}"
bashcli-command-exec "${parameters[@]}"

#!/usr/bin/env bash

# shellcheck disable=SC2034,SC2054

DESCRIPTION="\
This command is for testing only.
"

OPTIONS=(
  enum-option         single
  boolean-option      boolean
  single-option       single
  multi-option        multi
  enum-option-first   enum:enum-option
  enum-option-second  enum:enum-option
  enum-option-third   enum:enum-option
)

OPTION_DESCRIPTIONS=(
  boolean-option "An option without an argument."
  single-option  "An option with an argument that is supposed to be used only once."
  multi-option   "An option with an argument that may be used multiple times."
)

OPTION_ALIASES=(
  b boolean-option
  B boolean-option
  s single-option
  S single-option
  m multi-option
  M multi-option
)

OPTION_COMPLETIONS=(
  single-option file
  multi-option  directory,service
)

CONFIG=(
)

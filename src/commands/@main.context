#!/usr/bin/env bash
# shellcheck disable=SC2034

DESCRIPTION="
The root command of the CLI.
"

OPTIONS=(
  profile  multi-list
  version  flag
  debug    flag
  debug-filter single
)

OPTION_DESCRIPTIONS=(
  profile "Enable one or more configuration profiles."
  version "Display version information about the program."
  debug   "Enable debug logging."
  debug-filter "Enable debug logging for matching commands and functions.

The argument should be an extended regular expression."
)

OPTION_ALIASES=(
  P profile
)

OPTION_VALUE_TYPES=(
  profile config-profile
)

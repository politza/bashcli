#!/usr/bin/env bash

PATH=${PWD}/fixtures/version:${PATH}
output=$(mktemp)
trap "rm -r -- '${output}'" EXIT

test-version-option() {
  cli --version | sed 's/bashcli [0-9]\+\(\.[0-9]\+\)\{2\}/bashcli x.y.z/' &> "${output}"
  diff "${output}" - <<EOF
cli 1.2.3 (bashcli x.y.z)
EOF
}

. ./lib/run-tests

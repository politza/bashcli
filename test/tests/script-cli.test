#!/usr/bin/env bash

PATH=$PWD/fixtures/script-cli:${PATH}
output=$(mktemp)
trap "rm -r -- '${output}'" EXIT

test-executable-setup() {
  cli command a b c &> "${output}"
  diff "${output}" - <<EOF
a
b
c
EOF
}

test-executable-help() {
  cli command --help &> "${output}"
  diff "${output}" - <<EOF
Usage:
cli command [ OPTIONS ]

Options:
--option
  A boolean option.

--version
  Prints the version of the program.

--help
  Shows a help message.
EOF
}

. ./lib/run-tests

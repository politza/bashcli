#!/usr/bin/env bash
# shellcheck disable=SC2064,SC1091

PATH=$PWD/fixtures/script-cli:${PATH}
output=$(mktemp)
trap "rm -r -- '${output}'" EXIT

test-executable-setup() {
  cli command a b c &> "${output}"
  diff "${output}" - <<EOF
a
b
c
EOF
}

test-executable-help() {
  cli command --help &> "${output}"
  diff "${output}" - <<EOF
Usage:
cli command [ OPTIONS ]

Options:
--help
  Shows a help message.

--option
  A boolean option.
EOF
}

. ./lib/run-tests
